{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "ES2022",
    "allowJs": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "useDefineForClassFields": false
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
